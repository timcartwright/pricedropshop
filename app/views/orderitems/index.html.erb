<h1 class="text-center">Your Basket</h1>
<section id="products">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if @orderitems %>
        <table class="table table-striped">
          <tr>
            <th>Product</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Price</th>
            <th></th>
          </tr>
          <%= render @orderitems %>
          <tr>
            <td><strong>Total</strong></td>
            <td></td>
            <td class="text-center"><strong><%= "#{number_to_currency(@ordertotal, locale: :en)}" %></strong></td>
            <td></td>
          </tr>
        </table>
        <div>
          <%= render "stripe" %>
        </div>
      <% else %>
        <div class="well">
          Your basket is empty
        </div>
      <% end %>
    </div>
  </div>
</section>

