<h1 class="text-center">Your Basket</h1>
<section id="products">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if @orderitems.any? %>
        <table class="table table-striped">
          <th>Product</th>
          <th class="text-center">Quantity</th>
          <th class="text-center">Price</th>
          <th></th>
          <%= render @orderitems %>
        </table>
      <% else %>
        <div class="well">
          Your basket is empty
        </div>
      <% end %>
    </div>
  </div>
</section>

