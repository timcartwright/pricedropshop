<section id="products">
  <div class="well">
    <div class="row row-eq-height">
      <div class="col-md-6">   
        <div class="media-left">
          <%= image_tag(@product.image.url, class: 'media-object img-rounded img-responsive') %>
        </div>
      </div>
      <div class="col-md-6 product-details">
          
          <h1>
            <%= @product.title %>
          </h1>
          <p>
            <%= @product.description %>
          </p>
          <h3>
            <%= "#{number_to_currency(@product.current_price, locale: :en)}" %>
          </h3>
          
            <%= link_to "Buy Now", orderitems_path(product: @product), method: :post, class: "btn btn-sm btn-primary btn-block buy-button" %>
          
        
      </div>
    </div>
  </div>
</section>