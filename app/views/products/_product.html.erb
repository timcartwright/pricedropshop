<div class="col-md-4">
  <div class="product-teaser well">
    <% if product.user == current_user %>
      <%= link_to "Edit", edit_product_path(product), class: "pull-left" %>
      <%= link_to "Delete", product_path(product), method: :delete, class: "pull-right" %>
    <% end %>
    <h2>
      <%= product.title %>
    </h2>
    <%= image_tag(product.image.url, class: 'media-object img-rounded img-responsive') %>
    <h3>
      <%= "#{number_to_currency(product.current_price, locale: :en)}" %>
    </h3>
    <p>
      <%= truncate(product.description, length: 150) %>
    </p>
    <p>
      <%= link_to "Full Details", product_path(product) %>
    </p>
  </div>
</div>

   
    
  
